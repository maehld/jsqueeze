<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

  <appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%-5level - %msg%n</pattern>
    </layout>
  </appender>
	
  <root>
    <level value="debug" />
    <appender-ref ref="STDOUT" />
  </root>

</configuration>